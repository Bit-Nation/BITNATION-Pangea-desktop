    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "bail": true,
        "globals": {
            "ts-jest": {
                "tsConfigFile": "tsconfig-jest.json"
            }
        },
        "testRegex": ".*\\.(test|spec)\\.(jsx?|tsx?)",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "nodemonConfig": {
        "ignore": [
            "*.test.ts",
            "docs/*"
        ],
        "delay": "0"
    }
